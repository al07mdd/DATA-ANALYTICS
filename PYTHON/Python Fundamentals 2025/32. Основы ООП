class Book:
    def __init__(self, title, author):
        self.title = title
        self.author = author

    def get_description(self):  # self - —Å—Å—ã–ª–∫–∞ –Ω–∞ –æ–±—ä–µ–∫—Ç, —É –∫–æ—Ç–æ—Ä–æ–≥–æ –≤—ã–∑–≤–∞–Ω –º–µ—Ç–æ–¥
        return f"{self.title} ‚Äî {self.author}"

    def show_info(self):  # self - —Å—Å—ã–ª–∫–∞ –Ω–∞ –æ–±—ä–µ–∫—Ç, —É –∫–æ—Ç–æ—Ä–æ–≥–æ –≤—ã–∑–≤–∞–Ω –º–µ—Ç–æ–¥
        print(self.get_description())  # –≤—ã–∑–æ–≤ –¥—Ä—É–≥–æ–≥–æ –º–µ—Ç–æ–¥–∞ —á–µ—Ä–µ–∑ self

    def make_author_upper(self):  # self - —Å—Å—ã–ª–∫–∞ –Ω–∞ –æ–±—ä–µ–∫—Ç, —É –∫–æ—Ç–æ—Ä–æ–≥–æ –≤—ã–∑–≤–∞–Ω –º–µ—Ç–æ–¥
        self.author = self.author.upper()

