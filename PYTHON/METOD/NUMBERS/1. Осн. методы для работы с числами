üî∏üî∏üî∏ –û–°–ù–û–í–ù–´–ï –ú–ï–¢–û–î–´ –î–õ–Ø –†–ê–ë–û–¢–´ –° –ß–ò–°–õ–ê–ú–ò üî∏üî∏üî∏

üìå 1. –û–ü–ï–†–ê–¶–ò–ò –° –ß–ò–°–õ–ê–ú–ò
‚úÖ 
x = -10
y = 3.14159

print(abs(x))        # 10 - –º–æ–¥—É–ª—å —á–∏—Å–ª–∞
print(pow(2, 3))     # 8 - –≤–æ–∑–≤–µ–¥–µ–Ω–∏–µ –≤ —Å—Ç–µ–ø–µ–Ω—å (2^3)
print(round(y, 2))   # 3.14 - –æ–∫—Ä—É–≥–ª–µ–Ω–∏–µ –¥–æ 2 –∑–Ω–∞–∫–æ–≤
print(divmod(10, 3)) # (3, 1) - —á–∞—Å—Ç–Ω–æ–µ –∏ –æ—Å—Ç–∞—Ç–æ–∫ (10 // 3, 10 % 3)

üìå 2. –ü–†–ï–û–ë–†–ê–ó–û–í–ê–ù–ò–ï –¢–ò–ü–û–í
‚úÖ 
print(int(3.9))     # 3 - –æ—Ç–±—Ä–∞—Å—ã–≤–∞–µ—Ç –¥—Ä–æ–±–Ω—É—é —á–∞—Å—Ç—å
print(float(10))    # 10.0 - –ø–µ—Ä–µ–≤–æ–¥ –≤ `float`
print(str(42))      # '42' - –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏–µ –≤ —Å—Ç—Ä–æ–∫—É
print(bin(10))      # '0b1010' - –¥–≤–æ–∏—á–Ω–æ–µ –ø—Ä–µ–¥—Å—Ç–∞–≤–ª–µ–Ω–∏–µ
print(oct(10))      # '0o12' - –≤–æ—Å—å–º–µ—Ä–∏—á–Ω–æ–µ –ø—Ä–µ–¥—Å—Ç–∞–≤–ª–µ–Ω–∏–µ
print(hex(10))      # '0xa' - —à–µ—Å—Ç–Ω–∞–¥—Ü–∞—Ç–µ—Ä–∏—á–Ω–æ–µ –ø—Ä–µ–¥—Å—Ç–∞–≤–ª–µ–Ω–∏–µ

üìå 3. –ú–ê–¢–ï–ú–ê–¢–ò–ß–ï–°–ö–ò–ï –§–£–ù–ö–¶–ò–ò (–∏–∑ –º–æ–¥—É–ª—è math)
‚úÖ import math

z = 16

print(math.sqrt(z))      # 4.0 - –∫–≤–∞–¥—Ä–∞—Ç–Ω—ã–π –∫–æ—Ä–µ–Ω—å
print(math.ceil(y))      # 4 - –æ–∫—Ä—É–≥–ª–µ–Ω–∏–µ –≤–≤–µ—Ä—Ö
print(math.floor(y))     # 3 - –æ–∫—Ä—É–≥–ª–µ–Ω–∏–µ –≤–Ω–∏–∑
print(math.factorial(5)) # 120 - —Ñ–∞–∫—Ç–æ—Ä–∏–∞–ª 5! = 5*4*3*2*1
print(math.gcd(54, 24))  # 6 - –Ω–∞–∏–±–æ–ª—å—à–∏–π –æ–±—â–∏–π –¥–µ–ª–∏—Ç–µ–ª—å
print(math.lcm(5, 3))    # 15 - –Ω–∞–∏–º–µ–Ω—å—à–µ–µ –æ–±—â–µ–µ –∫—Ä–∞—Ç–Ω–æ–µ (Python 3.9+)
print(math.log(8, 2))    # 3.0 - –ª–æ–≥–∞—Ä–∏—Ñ–º (–ª–æ–≥‚ÇÇ 8)
print(math.exp(2))       # 7.389 - e^2
print(math.sin(math.pi/2))  # 1.0 - —Å–∏–Ω—É—Å 90 –≥—Ä–∞–¥—É—Å–æ–≤

üìå 4. –†–ê–ë–û–¢–ê –° DECIMAL (–î–õ–Ø –¢–û–ß–ù–´–• –í–´–ß–ò–°–õ–ï–ù–ò–ô)

‚úÖ from decimal import Decimal, getcontext

getcontext().prec = 5  # –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Ç–æ—á–Ω–æ—Å—Ç—å –¥–æ 5 –∑–Ω–∞–∫–æ–≤

a = Decimal("10.12345")
b = Decimal("3.14")

c = a + b  # Decimal('13.263')
print(c)

üìå 5. –†–ê–ë–û–¢–ê –° FRACTIONS (–î–†–û–ë–ò)

‚úÖ from fractions import Fraction

frac1 = Fraction(3, 4)  # 3/4
frac2 = Fraction(2, 3)  # 2/3

result = frac1 + frac2  # 17/12
print(result)







